doctype html
html( lang='en' )

  head
    include head/_head

  body
    include svgs/_svgs

    nav.l-nav
      .l-nav__content.l-nav__content--front(class='h-table')
        .l-nav__links(class='h-table__cell')
          a.l-nav__link(
          class='js-hxa',
          class='is-active'
          href='/',
          title='Home')
            span.l-nav__link__bg
            span.l-nav__link__text Home

          a.l-nav__link(
          class='js-hxa',
          href='/experiments',
          title='Experiments')
            span.l-nav__link__bg
            span.l-nav__link__text Experiments

    span.l-nav-toggle(id='js-bt-nav')
      span.h-abs-center
      span.h-abs-center
      span.h-abs-center

    main.l-container


      .l-container__handler(id='js-l-container__handler')

        .t-home(
        id='js-t-home',
        class='h-abs-bg')
          header.t-home__header
            .t-home__header-container(class='h-table')
              .t-home__header-content(class='h-table__cell')

                h2.t-home__top Lorem ipsum

                h1.t-home__title
                  span Estebanco
                  span Dolor Sit Amet

                a.t-home__bottom(
                href='mailto:esteban@fugitivepixel.com',
                title='') esteban@fugitivepixel.com
          .t-home__slider
            .t-home__slider-content(class='h-abs-center')

              .t-home__slider-nav(class='h-abs-left-top')
                span.t-home__slider-nav__bt
                  span(class='h-abs-center')
                  span(class='h-abs-center')
                span.t-home__slider-nav__bt
                  span(class='h-abs-center')
                  span(class='h-abs-center')

              .t-home__slider-item(class='h-abs-center')
                .t-home__slider-item__image(
                class='h-abs-center h-abs-bg',
                style='background-image:url(assets/images/temp.jpg)')

                span.t-home__slider-item__number 03

                span.t-home__slider-item__line-top(class='h-abs-center-top')
                span.t-home__slider-item__line-bottom(class='h-abs-center-bottom')

                p.t-home__slider-item__desc-top(class='h-abs-center-top') Read more
                p.t-home__slider-item__desc-bottom(class='h-abs-center-bottom') lorem ipsum
        block body

    //- include _loader

    include scripts/_scripts